@model GameDetailModel
@{
    ViewData["Title"] = "Detail Game";
}
<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
    <div class="card-body text-center">
        <h5 class="card-title">@Model.Name</h5>
        <h5 class="card-title">@Model.Description</h5>

    </div>
    <form method="post">
        <div>
            <div class="form-group">
                <label asp-for="Rate"></label>
                <input asp-for="Rate" class="form-control" placeholder="1-5 ">
                <button type="submit" value="Submit">Submit</button>
            </div>
        </div>
    </form>>
</div>

